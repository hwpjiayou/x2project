<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/v1_publish_voice_main_bg"
    android:orientation="vertical" >
    
    <TextView 
            android:id="@+id/pop_message"
        	android:layout_width="130dip"
    		android:layout_height="wrap_content"  
    		android:background="@drawable/v1_publish_pop_message"
    		style="@style/T3"
    		android:layout_marginTop="6dip"
    		android:gravity="center"
    		android:text="@string/chat_record_short"
    		android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/publish_voice_time"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:background="@drawable/transparent"
            android:paddingRight="18dip"
            android:text="45S" />

        <FrameLayout
            android:id="@+id/voice_root"
            android:layout_gravity="center"
             android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <com.renren.mobile.x2.components.chat.view.VoiceBgImageView
                android:id="@+id/back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center"
                android:background="@drawable/v1_chat_voice_bottom"
                 />

            <ImageView
                android:id="@+id/voice1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_voice1" />

            <ImageView
                android:id="@+id/voice2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_voice2" />

            <ImageView
                android:id="@+id/voice3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_voice3" />

            <ImageView
                android:id="@+id/voice4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_voice4" />

            <ImageView
                android:id="@+id/bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice__bin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/voice_to_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_to_short"
                android:visibility="gone" />
            
              <ImageView
                android:id="@+id/voice_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_publisher_voice_play_stop_unselect" />
              
                <ImageView
                android:id="@+id/voice_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_publisher_voice_play_unsecect" />
                
                <ImageView
                android:id="@+id/publisher_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_publisher_voice" />

            <ImageView
                android:id="@+id/voice_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/v1_chat_voice_speaker" />

            <TextView
                android:id="@+id/voice_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:textColor="#ff000000"
                android:textSize="18sp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/publish_voice_time2"
             android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:paddingLeft="18dip"
            android:background="@drawable/transparent"
            android:text="45S" />
    </LinearLayout>

    <Button
        android:id="@+id/publish_voice_bt"
        android:layout_width="160dip"
        android:layout_height="38dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="10dip"
        android:layout_gravity="center"
        android:text="@string/chat_voice_talk"
        android:textColor="@drawable/inputbar_record_botton_text_color"
        android:textSize="18sp"
        android:background="@drawable/inputbar_record_botton_bg" />

</LinearLayout>