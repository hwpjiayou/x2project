<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:duplicateParentState="true"
        android:orientation="horizontal"
        android:background="@drawable/v1_publisher_select_list_background">

        <ImageView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/publisher_select_icon_selector"
                android:duplicateParentState="true"/>

        <TextView
            android:duplicateParentState="true"
            android:textSize="16sp"
            android:id="@+id/publisher_selector_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/v1_publisher_select_list_text_color" />
    </LinearLayout>

</LinearLayout>