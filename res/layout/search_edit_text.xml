<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/search_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/contact_search_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:paddingLeft="1dip"
        android:paddingRight="1dip" >

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/v1_chat_inputbar_inputtextbg"
            android:gravity="center_vertical"
            android:hint="@string/search_school_name_hint"
            android:textCursorDrawable="@null"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="100"
            android:paddingLeft="38dip"
            android:paddingRight="38dip" 
            android:singleLine="true"
            style="@style/T20"
            android:textColorHint="@color/t8"/>


        <ImageView
            android:layout_width="36dip"
            android:layout_height="36dip" 
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/contact_search" />

        <ImageView
            android:id="@+id/search_del"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="1dip"
            android:background="@drawable/contact_search_cancel"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/search_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#E4E4E4" />

</LinearLayout>