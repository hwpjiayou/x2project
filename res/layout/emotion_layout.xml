<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emotion_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/v1_emotion_gridview_bg"
     >

    <LinearLayout
        android:id="@+id/emotion_main_container"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emotion_tab_container"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/emotion_face_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/v1_emotion_face_selected" 
            android:background="@drawable/v1_emotion_tab_pressed"
            />

        <ImageView
            android:id="@+id/emotion_ring_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/v1_emotion_ring_unselected"
            android:background="@drawable/v1_emotion_ring_selector"
             />

        <ImageView
            android:id="@+id/emotion_flower_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/v1_emotion_flower_unselected"
            android:background="@drawable/v1_emotion_flower_selector"
             />

        <ImageView
            android:id="@+id/emotion_cube_imageview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="center"
            android:visibility="gone"
            android:background="@drawable/v1_emotion_cube_selector"
            android:src="@drawable/v1_emotion_cube_unselected" />
    </LinearLayout>

</LinearLayout>