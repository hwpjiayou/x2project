<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/profile_userinfo_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout 
            android:id="@+id/profile_head_imglayout"
            android:layout_width="88dip"
            android:layout_height="88dip"
            android:layout_gravity="left"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="8dip"
            android:paddingRight="4dip">
        <ImageView
            android:id="@+id/profile_head_img"
            android:layout_width="76dip"
            android:layout_height="76dip"
            android:layout_gravity="center"
             />
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/v1_userinfo_headimg"/>
         </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="12dip"
            android:id="@+id/profile_userinfo"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                style="@style/T14"
                android:visibility="gone"/>
            <ImageView 
                android:id="@+id/profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="8dip"
                android:visibility="gone"/>
            </LinearLayout>
            <TextView 
                android:id="@+id/profile_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingTop="4dip"
                style="@style/T3"
                android:visibility="gone"/>
            <TextView 
                android:id="@+id/profile_enrolltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingTop="4dip"
                style="@style/T3"
                android:visibility="gone"/>           
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dip">
         <TextView 
                android:id="@+id/profile_scholl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                style="@style/T3"
                android:visibility="gone"/>
        <TextView
            
            android:id="@+id/profile_department"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:paddingLeft="6dip"
            style="@style/T3"
            android:visibility="gone"/>
        </LinearLayout>
        </LinearLayout>
 </LinearLayout>
