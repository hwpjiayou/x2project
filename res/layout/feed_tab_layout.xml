<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:background="@drawable/v1_common_tab_title_bg"
     >

    <RelativeLayout
        android:id="@+id/feed_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="52dip"
        android:background="@drawable/v1_common_tab_bg"
        android:gravity="center_vertical"
         >
<!--  android:background="@drawable/feed_tab_feed_press_bg" -->
        <TextView 
            android:id="@+id/feed_tab_feed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_name"
            style="@style/T4"
          	android:background="@drawable/feed_tab_feed_press_bg"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dip"
            />
        <TextView 
            android:id="@+id/feed_tab_top10_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/T5"
            android:text="@string/top10_name"
            android:background="@drawable/feed_tab_feed_press_bg"
            android:layout_toRightOf="@id/feed_tab_feed_button"
            android:layout_marginTop="3dip"
            />
    </RelativeLayout>
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
        >
        <!-- android:background="@drawable/feed_tab_refresh_bg" -->
        <ImageButton
            android:id="@+id/feed_tab_refresh_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:background="@color/transparent"
            android:src="@drawable/feed_tab_refresh_unpress" />

  
    </FrameLayout>
</RelativeLayout>