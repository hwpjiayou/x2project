<?xml version="1.0" encoding="utf-8"?>
<com.renren.mobile.x2.components.comment.LoadMoreViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_more_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/add_more_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:id="@+id/add_more_item"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@id/add_more_divider"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/add_more_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/add_more_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_marginTop="2dip"
            android:layout_toLeftOf="@id/add_more_textview"
            android:visibility="invisible" />
    </RelativeLayout>

</com.renren.mobile.x2.components.comment.LoadMoreViewItem>